<div class="col-sm-12">
  <p id="notice"><%= notice %></p>

  <h1>Pins</h1>
  <table id="pins" class="table table-condensed">
    <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Board</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody id="wookmark_id" class="page">
    <%= render @pins %>
    </tbody>
  </table>
  <%= link_to 'New Pin', new_pin_path %>
  <%= paginate @pins %>
</div>

<script>
    var $handlerr = $('#wookmark_id td');
    $handlerr.wookmark({
        align: 'center',
        autoResize: true,
        container: $('#main'),
        offset: 5,
        outerOffset: 10,
        resizeDelay: 50,
        itemWidth: 210
    });

    $handler.click(function () {
        var newHeight = $('img', this).height() + Math.round(Math.random() * 300 + 30);
        $(this).css('height', newHeight + 'px');

        // Update the layout.
        $handler.wookmark();
    });


</script>
